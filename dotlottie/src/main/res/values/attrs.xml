<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- https://android.googlesource.com/platform/frameworks/base/+/53a3ed7c46c12c2e578d1b1df8b039c6db690eaa/core/res/res/values/attrs.xml -->
    <declare-styleable name="DotLottieAnimation">
        <attr name="dotLottie_src" format="string" />
        <!-- Defines how many times the animation should repeat. The default value is 0. -->
        <attr name="dotLottie_loop" format="boolean" />
        <attr name="dotLottie_loop_count" format="integer" />
        <attr name="dotLottie_marker" format="string" />
        <!--        <attr name="repeatCount" format="boolean">-->
        <!--            <enum name="infinite" value="true" />-->
        <!--        </attr>-->
        <!-- Defines the animation behavior when it reaches the end and the repeat count is
             greater than 0 or infinite. The default value is restart. -->
        <attr name="dotLottie_playMode">
            <!-- The animation starts again from the beginning. -->
            <enum name="normal" value="1" />
            <!-- The animation plays backward. -->
            <enum name="reverse" value="2" />
        </attr>
        <attr name="dotLottie_speed" format="float" />
        <attr name="dotLottie_autoplay" format="boolean" />
        <attr name="dotLottie_backgroundColor" format="integer" />
        <attr name="dotLottie_useFrameInterpolation" format="boolean" />
        <attr name="dotLottie_themeId" format="string" />
        <attr name="dotLottie_stateMachineId" format="string" />
        <attr name="dotLottie_animationId" format="string" />
        <attr name="dotLottie_threads" format="integer" />
    </declare-styleable>
</resources>